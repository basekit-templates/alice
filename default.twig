{% extends "layout.twig" %}
{% block content %}

    <section class="container">

        <div class="page-content">

            <!-- Main Widget Zone -->
            {{widget('image', 'image', {
                'src': asset("/images/feature.jpg"),
                'align': 'widget-align-center'
            })|raw}}

            {{widget('companyname', 'companyname', {"business": "profile"})|raw}}

            {{widget('content', 'strapline', {
              content: '<h2>LOREM IPSUM DOLOR</h2>'
            })|raw}}

            <div class="companydescription">
                {{widget('content', 'companydescription', {
                  content: '<p>Lorem ipsum dolor sit amet...</p>'
                })|raw}}
            </div>

            {{widget('button', 'button', {
                'text': 'Lorem Ipsum',
                'align': 'widget-align-center',
                'action': 'external',
                'target': '_blank'
            })|raw}}

            {{widget('profile', 'socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}

            {{widget('profile', 'address', { 'profileType':'address', 'address':'profile'})|raw}}

        </div>

        <!-- Zone -->
        <div class="zone-content">
            {{zone('main')|raw}}
        </div>

    </section>

{% endblock %}
